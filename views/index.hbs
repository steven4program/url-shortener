<h1 class="mt-3">URL shortener</h1>
<div class="mt-5">
  <i class="fas fa-link fa-5x"></i>
</div>
<div class="mt-5">
<form action="/shorturls" method="post" class="my-4 form-inline">
  <label for="fullUrl" class="sr-only">Url</label>
  <input type="url" class="col form-control mr-2" name="fullUrl" id="fullUrl" placeholder="https://example.com">
  <button class="btn btn-success" type="submit">Shrink</button>
</form>
</div>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Full URL</th>
      <th>Short URL</th>
    </tr>
  </thead>
  <tbody>
    {{#each shorturls}}
    <tr>
      <td><a href="{{this.full}}">{{this.full}}</a></td>
      <td><a href="{{this.short}}">{{this.short}}</a></td>
      <form action="./shorturls/{{this._id}}?_method=DELETE" method="POST">
        <td><button type="submit" class="btn btn-danger">Delete</button></td>
      </form>
    </tr>
    {{/each}}
  </tbody>
</table>